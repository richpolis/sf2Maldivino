{% extends '::base.html.twig' %}

{% block title %}Pedido{% endblock %}

{% block body %}
<h1>Pedido desde Maldivino.com</h1>
<table>
	<thead>
	<tr  style="background-color: gray;color: white;">
		<th>Producto</th>
		<th>Cantidad</th>
		<th>Precio</th>
		<th>Importe</th>
	</tr>
	</thead>
	<tbody>
	{% set importe = 0 %}
	{% for producto in datos.pedidos %}
		<tr>
			<td>
				{{producto.producto}}
			</td>
			<td>
				{{producto.cantidad|number_format(2,',','.')}}
			</td>
			<td>
				${{producto.precio|number_format(2,',','.')}}
			</td>
			<td>
				${{producto.importe|number_format(2,',','.')}}
			</td>
		</tr>
		{% set importe = importe + producto.importe %}
	{% endfor %}
	</tbody>
	<tfoot>
		<tr>
			<td colspan="4">Importe total ${{importe|number_format(2,',','.')}}</td>
		</tr>
	</tfoot>
</table>
{% endblock %}