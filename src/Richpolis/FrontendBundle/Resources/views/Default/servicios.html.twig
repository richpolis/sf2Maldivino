{% extends 'FrontendBundle::layout.html.twig' %}

{% block stylesheets %}
    {{  parent()  }}
    <link rel="stylesheet" href="{{asset('css/jquery.bxslider.css')}}">
    <link rel="stylesheet" href="{{asset('css/fancybox/jquery.fancybox.css')}}"/>
    <style>
    .bx-wrapper .bx-viewport{
        padding: 0px;
        border: none;
        top: 0px;
        left: 0px;
        background: transparent;
    }
    </style>
{% endblock %}

{% block extra_header %}
    <div class="container-extra-header" style="height:90px;">
    </div>
{% endblock %}

{% block contenido %}
        <article class="servicios">
            <h2>nuestros servicios</h2>
			<ul class="servicios">
			    {% for servicio in range(1,6) %}
				<li class="servicio">
					<figure class="logo-servicio">
						<img src="http://placehold.it/200x200&text={{servicio}}" alt="">
					</figure>
					<div class="contenido-servicio">
						<h3>Titulo del servicio {{servicio}}</h3>
						<p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Unde aut sunt accusamus ad neque blanditiis eaque dolore necessitatibus ipsa id. Eos doloremque iure maiores ratione repellat facere atque dolores non?</p>
					</div>
				</li>
				{% endfor %}
			</ul>
        </article>
{% endblock %}
{% block javascripts %}
{{ parent() }}
<script src="{{asset('js/main.js')}}"></script>
<script src="{{asset('js/jquery.bxslider.js')}}"></script>
<script>
    $(document).ready(function(){
      $('.galeriaContenedor').bxSlider({
          slideWidth: 310,
          minSlides: 2,
          maxSlides: 3,
          slideMargin: 7,
          pager: false,
          nextSelector: '#slider-next',
          prevSelector: '#slider-prev',
          nextText: '',
          prevText: ''
      });
    });
</script>
<script src="{{asset('js/fancybox/jquery.fancybox.pack.js')}}"></script>
<script src="{{asset('js/fancybox/jquery.fancybox-media.js')}}"></script>
<script>
    $(document).ready(function() {
        $("a.fancybox").fancybox();
                
        $("a.fancybox-media").fancybox({
            helpers : {
                media: true
            },
            youtube : {
                autoplay: 0
            }
        });
    });
</script>
{% endblock %}
