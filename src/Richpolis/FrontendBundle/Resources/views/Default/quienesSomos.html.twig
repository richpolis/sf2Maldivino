{% extends 'FrontendBundle::layout.html.twig' %}

{% block stylesheets %}
    {{  parent()  }}
    <link rel="stylesheet" href="{{asset('css/jquery.bxslider.css')}}">
    <link rel="stylesheet" href="{{asset('css/fancybox/jquery.fancybox.css')}}"/>
    <style>
        .bx-wrapper .bx-pager.bx-default-pager a:hover,
        .bx-wrapper .bx-pager.bx-default-pager a.active {
            background: red;
        }
    </style>
{% endblock %}

{% block contenido %}
        <article class="slidePrincipal">
            <div class="galeria">
                <ul class="lista">
                    {% for galeria in range(1,5) %}
                        <li class="item"><img src="http://placehold.it/642x335&text={{galeria}}" alt="texto {{galeria}}"></li>
                    {% endfor %}
                </ul>
				<span id="slider-prev"></span>
                <span id="slider-next"></span>
            </div>
        </article>
	<article class="quienessomos">
		<p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Magni similique amet sunt quas distinctio sint expedita cumque voluptatibus cum ipsa ipsum recusandae inventore aliquid velit esse consequatur facere harum cupiditate.</p>
        <p>
            Lorem ipsum dolor sit amet, consectetur adipisicing elit. Labore, eaque, a iusto ipsam ipsa voluptatem quo totam possimus molestiae accusamus nam quia asperiores voluptatum praesentium ut aliquid deleniti. Dolores, voluptatem.
        </p>
		<figure class="logo">
			<img src="{{asset('images/keyarts/logoquienesomos.png')}}" alt="">
		</figure>
	</article>                               
                                
{% endblock %}
{% block javascripts %}
{{ parent() }}
<script src="{{asset('js/jquery.bxslider.js')}}"></script>
<script src="{{asset('js/main.js')}}"></script>
<script src="{{asset('js/fancybox/jquery.fancybox.pack.js')}}"></script>
<script src="{{asset('js/fancybox/jquery.fancybox-media.js')}}"></script>
<script>
$(document).on("ready",function(){
        $('.lista').bxSlider({
                randomStart: false,
                pager: true,
                auto: true,
                controls: true,
                speed: 1000,
                autoHover: true,
                slideWidth: 642,
            });
		
                
        $("a.fancybox").fancybox();
                
        $("a.fancybox-media").fancybox({
            helpers : {
                media: true
            },
            youtube : {
                autoplay: 0
            }
        });


});
    
</script>
{% endblock %}


